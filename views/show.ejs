      </div>
    
      <h1 class="ui header"><%= blog.title%></h1>
      <div class="content">
        <div class="description">
          <p><%- blog.body %></p>
        </div>
      </div>
      <div class="extra content">
        <p>
          
        </p>
      </div>
  </div>
