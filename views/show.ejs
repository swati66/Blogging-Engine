<div class="ui items">
  <div class="item">
    <div class="image">
      <img src="<%= blog.image%>">
    </div>
    <div class="content">
      <a class="header"><%= blog.title%></a>
      <div class="description">
        <p><%- blog.body %></p>
      </div>
